{
  "app": {
    "name": "LifeTracer",
    "version": "1.0.0",
    "debug": true,
    "host": "0.0.0.0",
    "port": 8000
  },
  "database": {
    "url": "sqlite:///./lifetracer.db",
    "echo": false
  },
  "cache": {
    "directory": "cache",
    "default_expire": 3600,
    "biography_expire": 86400,
    "geocoding_expire": 604800
  },
  "llm": {
    "default_provider": "openai",
    "timeout": 30,
    "openai": {
      "api_key": "your-openai-api-key-here",
      "base_url": "https://api.openai.com/v1",
      "model": "gpt-3.5-turbo"
    },
    "claude": {
      "api_key": "your-claude-api-key-here",
      "base_url": "https://api.anthropic.com",
      "model": "claude-3-sonnet-20240229"
    },
    "qwen": {
      "api_key": "your-qwen-api-key-here",
      "base_url": "https://dashscope.aliyuncs.com/api/v1",
      "model": "qwen-turbo"
    },
    "zhipu": {
      "api_key": "your-zhipu-api-key-here",
      "base_url": "https://open.bigmodel.cn/api/paas/v4",
      "model": "glm-4"
    }
  },
  "geocoding": {
    "default_provider": "nominatim",
    "timeout": 10,
    "nominatim": {
      "base_url": "https://nominatim.openstreetmap.org",
      "user_agent": "LifeTracer/1.0"
    },
    "amap": {
      "api_key": "your-amap-api-key-here",
      "base_url": "https://restapi.amap.com/v3"
    },
    "baidu": {
      "api_key": "your-baidu-api-key-here",
      "base_url": "https://api.map.baidu.com"
    },
    "google": {
      "api_key": "your-google-api-key-here",
      "base_url": "https://maps.googleapis.com/maps/api"
    }
  },
  "wikipedia": {
    "base_url": "https://zh.wikipedia.org/api/rest_v1",
    "timeout": 10,
    "languages": ["zh", "en"],
    "max_summary_length": 5000
  },
  "logging": {
    "level": "INFO",
    "directory": "logs",
    "max_file_size": 10485760,
    "backup_count": 5
  },
  "cors": {
    "allow_origins": ["http://localhost:3000", "http://127.0.0.1:3000"],
    "allow_credentials": true,
    "allow_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "allow_headers": ["*"]
  }
}